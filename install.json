{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./vendor/gravatar.js"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Summary location",
        "description": "Where should the summary appear on the page?",
        "order": 1,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "image": {
        "order": 2,
        "title": "select your image",
        "type": "string",
        "format": "image"
      },
      "gravatar": {
        "order": 3,
        "title": "Use my gravatar instead!",
        "type": "boolean",
        "default": false
      },
      "messageTitle": {
        "order": 4,
        "title": "Message Title",
        "type": "string",
        "default": "Hello!"
      },
      "message": {
        "order": 5,
        "title": "Message",
        "type": "string",
        "default": "This is my webpage!"
      },
      "email": {
        "order": 6,
        "title": "Email",
        "type": "string",
        "placeholder": "your@email.com"
      },
      "twitter": {
        "order": 7,
        "title": "Twitter Username",
        "type": "string",
        "placeholder": "YourUsername"
      },
      "facebook": {
        "order": 8,
        "title": "Facebook",
        "description": "Put whatever comes after facebook when you are on your profile page. ie www.facebook.com/[enter this information]",
        "type": "string",
        "placeholder": "your.name"
      },
      "linkedIn": {
        "order": 9,
        "title": "LinkedIn",
        "description": "You can find your profile link underneath your picture when you view your profile. www.linkedin.com/in/[enter this information]",
        "type": "string",
        "placeholder": "your-name-123a4567"
      }
    }
  }
}
