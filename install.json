{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Summary location",
        "description": "Where should the summary appear on the page?",
        "order": 1,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },
      "image": {
        "order": 2,
        "title": "select your image",
        "type": "string",
        "format": "image",
        "default": "http://madeworthy.com/wp-content/uploads/2015/01/gravatar-logo-512.jpg"
      },
      "gravatar": {
        "order": 3,
        "title": "Use my gravatar instead!",
        "type": "boolean",
        "default": false
      },
      "messageTitle": {
        "order": 4,
        "title": "Message Title",
        "type": "string",
        "default": "Hello!"
      },
      "message": {
        "order": 5,
        "title": "Message",
        "type": "string",
        "default": "This is my webpage!"
      },
      "emailToggle": {
        "order": 6,
        "title": "Add Email information",
        "type": "boolean",
        "default": true
      },
      "email": {
        "order": 7,
        "title": "Email",
        "type": "string",
        "showIf": "emailToggle",
        "default": "your@email.com"
      },
      "twitterToggle": {
        "order": 8,
        "title": "Add Twitter information",
        "type": "boolean",
        "default": true
      },
      "twitter": {
        "order": 9,
        "title": "Twitter",
        "type": "string",
        "showIf": "twitterToggle",
        "default": "twitter.com"
      },
      "facebookToggle": {
        "order": 10,
        "title": "Add Facebook information",
        "type": "boolean",
        "default": true
      },
      "facebook": {
        "order": 11,
        "title": "Facebook",
        "type": "string",
        "showIf": "facebookToggle",
        "default": "facebook.com"
      },
      "linkedInToggle": {
        "order": 12,
        "title": "Add LinkedIn information",
        "type": "boolean",
        "default": true
      },
      "linkedIn": {
        "order": 13,
        "title": "LinkedIn",
        "type": "string",
        "showIf": "linkedInToggle",
        "default": "linkedIn.com"
      }
    }
  }
}
