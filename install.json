{
  "resources": {
    "body": [
      {
        "type": "style",
        "src": "./build/app.css"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "location": {
        "title": "Summary location",
        "description": "Where should the summary appear on the page?",
        "order": 1,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      },

      "message": {
        "order": 2,
        "title": "Summary",
        "type": "string",
        "format": "richtext",
        "default": "<h1>Author, musician, designer.</h1><p>Hi there! My name's Jessie Smith and this is my creative blog. I live in the bay area with my two dogs and write about the future of web design.</p><p>Need a freelance writer? Let's get in touch!</p>"
      },

      "profilePicture": {
        "order": 3,
        "type": "object",
        "title": "Profile picture",
        "description": "An image that represents you online.",
        "properties": {
          "type": {
            "order": 1,
            "title": "What image should we use?",
            "type": "string",
            "format": "radios",
            "default": "gravatar",
            "enum": [
              "gravatar",
              "upload",
              "none"
            ],
            "enumNames": {
              "gravatar": "Use my Gravatar email. <a target=\"_blank\" href=\"https://en.gravatar.com/support/what-is-gravatar/\" class=\"more with-inherited-color\"><strong>Learn more</strong></a>",
              "upload": "Upload my own image.",
              "none": "Don't show an image."
            }
          },
          "gravatarEmail": {
            "order": 2,
            "showIf": {
              "profilePicture.type": "gravatar"
            },
            "title": "Gravatar email",
            "description": "<strong>Note:</strong> This will be public.",
            "type": "string",
            "placeholder": "jessie@example.com"
          },
          "url": {
            "order": 2,
            "showIf": {
              "profilePicture.type": "upload"
            },
            "title": "Select your image",
            "type": "string",
            "format": "image"
          }
        }
      },

      "icons": {
        "order": 4,
        "title": "Social icons",
        "description": "Check the icons youâ€™d like to add.",
        "type": "object",
        "properties": {
          "facebook": {
            "order": 1,
            "title": "Facebook",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.facebook.enabled": true
                },
                "title": "Username",
                "description": "As in facebook.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "twitter": {
            "order": 2,
            "title": "Twitter",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.twitter.enabled": true
                },
                "title": "Username",
                "description": "As in twitter.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "github": {
            "order": 3,
            "title": "Github",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.github.enabled": true
                },
                "title": "Username",
                "description": "As in github.com/<strong>username</strong>",
                "type": "string"
              }
            }
          },
          "linkedin": {
            "order": 4,
            "title": "LinkedIn",
            "type": "object",
            "properties": {
              "enabled": {
                "title": "Show",
                "type": "boolean",
                "default": false
              },
              "username": {
                "showIf": {
                  "icons.linkedin.enabled": true
                },
                "title": "Username",
                "description": "As in linkedin.com/in/<strong>username</strong>",
                "type": "string"
              }
            }
          }
        }
      },

      "position": {
        "order": 5,
        "title": "Horizontal alignment",
        "type": "string",
        "default": "center",
        "enum": [
          "left",
          "center",
          "right"
        ],
        "enumNames": {
          "left": "Left",
          "center": "Center",
          "right": "Right"
        }
      },

      "backgroundColor": {
        "order": 6,
        "title": "Background color",
        "type": "string",
        "format": "color",
        "default": "#ffffff"
      },

      "textColor": {
        "order": 7,
        "title": "Text color",
        "type": "string",
        "format": "color"
      }
    }
  }
}
